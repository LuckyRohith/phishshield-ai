{
  "manifest_version": 3,
  "name": "PhishShield AI",
  "description": "Detects phishing and scam websites in real time using heuristic analysis.",
  "version": "2.0",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://phishshield-ai-c9n7.onrender.com/*",
    "http://localhost:5000/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PhishShield AI"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon128.png"
  }
}
